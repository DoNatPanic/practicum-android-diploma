<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Выбранное состояние -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Внешний круг -->
            <item>
                <inset android:insetLeft="4dp" android:insetTop="4dp"
                    android:insetRight="4dp" android:insetBottom="4dp">
                    <shape android:shape="oval">
                        <size android:width="20dp" android:height="20dp"/>
                        <solid android:color="@android:color/white"/>
                        <stroke android:width="2dp" android:color="@color/blue"/>
                    </shape>
                </inset>
            </item>
            <!-- Внутренний круг (точка в центре) -->
            <item>
                <inset android:insetLeft="9dp" android:insetTop="9dp"
                    android:insetRight="9dp" android:insetBottom="9dp">
                    <shape android:shape="oval">
                        <size android:width="6dp" android:height="6dp"/>
                        <solid android:color="@color/blue"/>
                    </shape>
                </inset>
            </item>
        </layer-list>
    </item>

    <!-- Не выбранное состояние -->
    <item>
        <inset android:insetLeft="4dp" android:insetTop="4dp"
            android:insetRight="4dp" android:insetBottom="4dp">
            <shape android:shape="oval">
                <size android:width="20dp" android:height="20dp"/>
                <solid android:color="@android:color/white"/>
                <stroke android:width="2dp" android:color="@color/blue"/>
            </shape>
        </inset>
    </item>
</selector>

